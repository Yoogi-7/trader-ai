
# ==== Core ====
ENV=dev
API_HOST=0.0.0.0
API_PORT=8000

# ==== Database (Timescale/Postgres) ====
DB_HOST=db
DB_PORT=5432
DB_USER=trader
DB_PASSWORD=trader
DB_NAME=trader_ai

# ==== Redis (cache + Celery broker) ====
REDIS_URL=redis://redis:6379/0

# ==== Redpanda (Kafka) ====
KAFKA_BROKERS=redpanda:9092
KAFKA_SIGNALS_TOPIC=signals
KAFKA_BACKFILL_TOPIC=backfill

# ==== Trading / Costs ====
FEE_MAKER_BPS=2
FEE_TAKER_BPS=6
SLIPPAGE_BPS=5
FUNDING_ON=true

# ==== Pairs and scanning ====
PAIRS=BTCUSDT,ETHUSDT,BNBUSDT,ADAUSDT,SOLUSDT,XRPUSDT,DOGEUSDT,AVAXUSDT,MATICUSDT,LTCUSDT
BASE_TF=15m
CONFIRM_TFS=1h,4h,1d
SCAN_INTERVAL_SECONDS=300

# ==== Risk profiles ====
RISK_PROFILE_DEFAULT=LOW
MAX_PARALLEL_POSITIONS_LOW=2
MAX_PARALLEL_POSITIONS_MED=4
MAX_PARALLEL_POSITIONS_HIGH=6
RISK_PER_TRADE_LOW=0.005
RISK_PER_TRADE_MED=0.01
RISK_PER_TRADE_HIGH=0.02
MAX_LEVERAGE_LOW=3
MAX_LEVERAGE_MED=5
MAX_LEVERAGE_HIGH=10
CORRELATION_CAP_BTC_ETH_PCT=30

# ==== Web ====
WEB_PORT=3000

# ==== Secrets (example placeholders) ====
JWT_SECRET=devsecret
