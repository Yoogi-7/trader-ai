# Database
DATABASE_URL=postgresql://traderai:traderai@db:5432/traderai
ASYNC_DATABASE_URL=postgresql+asyncpg://traderai:traderai@db:5432/traderai

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# API
API_V1_PREFIX=/api/v1
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Exchange
EXCHANGE_ID=binance
EXCHANGE_SANDBOX=false
EXCHANGE_API_KEY=
EXCHANGE_SECRET=

# ML
MIN_CONFIDENCE_THRESHOLD=0.55
MIN_NET_PROFIT_PCT=2.0
DEFAULT_LOOKBACK_YEARS=4

# Costs
MAKER_FEE_BPS=2
TAKER_FEE_BPS=5
SLIPPAGE_BPS=3
FUNDING_RATE_HOURLY_BPS=1

# Risk Profiles
LOW_RISK_PER_TRADE=0.01
MED_RISK_PER_TRADE=0.02
HIGH_RISK_PER_TRADE=0.03
LOW_MAX_LEV=5
MED_MAX_LEV=10
HIGH_MAX_LEV=20
LOW_MAX_POSITIONS=2
MED_MAX_POSITIONS=4
HIGH_MAX_POSITIONS=6

# Monitoring
DRIFT_PSI_THRESHOLD=0.15
DRIFT_KS_THRESHOLD=0.1
MAX_CONSECUTIVE_LOSSES=5
