
# ------- Global -------
COMPOSE_PROJECT_NAME=trader_ai
NETWORK_NAME=trader_ai_net

# ------- API -------
API_TITLE=Trader AI API
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
LOG_LEVEL=INFO

# ------- DB -------
POSTGRES_USER=trader
POSTGRES_PASSWORD=trader_pwd
POSTGRES_DB=trader_ai
POSTGRES_HOST=db
POSTGRES_PORT=5432
TIMESCALE_TWOX=true

# ------- Redis -------
REDIS_URL=redis://redis:6379/0

# ------- Kafka (Redpanda) -------
KAFKA_BROKER=kafka:9092
KAFKA_TOPIC_SIGNALS=signals

# ------- ML -------
EXCHANGE=binanceusdm
PAIRS=BTCUSDT,ETHUSDT,BCHUSDT,BNBUSDT,SOLUSDT,ADAUSDT,XRPUSDT,LINKUSDT,DOTUSDT,MATICUSDT
BASE_TF=15m
DATA_TF=1m
BACKFILL_YEARS=4

# ------- Trading constraints -------
MIN_NET_PCT=2.0
CONFIDENCE_THRESHOLD=0.55
MAKER_FEE_BPS=7
TAKER_FEE_BPS=10
SLIPPAGE_BPS=5
FUNDING_BPS=1.0

# ------- Risk Profiles -------
MAX_PARALLEL_LOW=2
MAX_PARALLEL_MED=4
MAX_PARALLEL_HIGH=8
RISK_PCT_LOW=0.01
RISK_PCT_MED=0.02
RISK_PCT_HIGH=0.03
MAX_LEV_LOW=5
MAX_LEV_MED=10
MAX_LEV_HIGH=20
CORRELATION_CAP_BTC_ETH=0.5  # 50% kapita≈Çu razem

# ------- Feature/Backtester -------
FUNDING_ON=true
MAKER_FIRST=true
SHADOW_PAPER=true
